{
  // Enforce Unix-style line endings (LF) for consistency across platforms
  "files.eol": "\n",
  // Enable format on save to automatically apply Prettier rules
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}
