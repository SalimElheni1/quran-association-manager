{
  "name": "quran-branch-manager",
  "version": "1.0.0",
  "description": "Desktop application for managing Quran association branches.",
  "main": "src/main/index.js",
  "author": "Salim Elheni",
  "license": "MIT",
  "scripts": {
    "react-dev": "vite",
    "electron-start": "electron .",
    "dev": "concurrently \"npm:react-dev\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder --win",
    "lint": "eslint .",
    "format": "prettier --write .",
    "seed:manual": "node scripts/manual-seeder.js",
    "test": "jest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@journeyapps/sqlcipher": "^5.3.1",
    "arabic-reshaper": "^1.1.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.3",
    "docxtemplater": "^3.65.3",
    "dotenv": "^17.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "exceljs": "^4.4.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pizzip": "^3.2.0",
    "react": "^19.0.0-rc-f994737d14-20240522",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^19.0.0-rc-f994737d14-20240522",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.25.1",
    "react-toastify": "^11.0.5",
    "rtl-arabic": "^2.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "jest": "^30.0.5",
    "prettier": "^3.3.2",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.manus.quranbranchmanager",
    "productName": "Quran Branch Manager",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/renderer/**/*",
      "src/main/**/*",
      "src/db/**/*",
      "!**/.vscode/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "node_modules/@journeyapps/sqlcipher/**/*"
    ],
    "win": {
      "target": "portable",
      "executableName": "QuranBranchManager"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
