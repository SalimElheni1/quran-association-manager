{
  "name": "quran-branch-manager",
  "version": "1.0.0",
  "description": "Desktop application for managing Quran association branches.",
  "main": "src/main/index.js",
  "author": {
    "name": "Quran Association",
    "email": "elheni.selim@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "react-dev": "vite",
    "electron-start": "electron .",
    "dev": "concurrently \"npm:react-dev\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "lint": "eslint .",
    "format": "prettier --write .",
    "seed:manual": "node scripts/manual-seeder.js",
    "test": "jest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.5.2",
    "@journeyapps/sqlcipher": "5.3.1",
    "arabic-reshaper": "1.1.0",
    "bcryptjs": "2.4.3",
    "bootstrap": "5.3.3",
    "docxtemplater": "3.47.2",
    "electron-squirrel-startup": "1.0.1",
    "electron-store": "8.2.0",
    "exceljs": "4.4.0",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "pizzip": "3.1.7",
    "react": "18.3.1",
    "react-bootstrap": "2.10.4",
    "react-dom": "18.3.1",
    "react-icons": "5.2.1",
    "react-router-dom": "6.25.1",
    "react-toastify": "11.0.5",
    "rtl-arabic": "2.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "4.3.1",
    "concurrently": "8.2.2",
    "dotenv": "16.4.5",
    "electron": "31.2.1",
    "electron-builder": "24.13.3",
    "electron-reloader": "1.2.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "jest": "29.7.0",
    "prettier": "3.3.2",
    "vite": "5.3.4",
    "wait-on": "7.2.0"
  },
  "build": {
    "appId": "com.manus.quranbranchmanager",
    "productName": "Quran Branch Manager",
    "files": [
      "dist",
      "src/main/**/*",
      "public/g247.png",
      "!**/*.spec.js",
      "!**/*.test.js",
      "!**/__mocks__/*",
      "!.env*",
      {
        "from": "src/db",
        "to": "src/db"
      }
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/g247.png",
      "category": "Utility"
    }
  }
}